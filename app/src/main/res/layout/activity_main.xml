<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_design"
    android:layout_margin="5dp"
    android:gravity="center"
    android:padding="7dp"
    tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is your weight?"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_margin="7dp"
        />

    <EditText
        android:id="@+id/edWeight"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="number"
        android:hint="Weight(KG)"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="25sp"
        android:background="@drawable/rounded_xml"
        android:layout_margin="7dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is your height?"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_margin="7dp"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_margin="7dp"
        >

        <EditText
            android:id="@+id/edFeet"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:hint="Feet"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="25sp"
            android:background="@drawable/rounded_xml"
            android:layout_weight=".5"
            android:layout_margin="7dp"
            />

        <EditText
            android:id="@+id/edInch"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:hint="Inch"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="25sp"
            android:background="@drawable/rounded_xml"
            android:layout_weight=".5"
            android:layout_margin="7dp"
            />


    </LinearLayout>

    <Button
        android:id="@+id/buttonBMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Calculate BMI"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_margin="7dp"
        android:background="@drawable/button_xml"
        />

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:background="#ffffff"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:textStyle="italic"
        android:textSize="27sp"
        android:text=""
        android:gravity="center"
        android:textColor="#000000"
        />



</LinearLayout>